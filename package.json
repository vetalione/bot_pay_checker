{
  "name": "bot-pay-checker",
  "version": "1.0.0",
  "description": "Telegram bot for payment verification and channel access",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "watch": "tsc -w",
    "get-file-id": "ts-node get_file_id_bot.ts",
    "retargeting": "ts-node src/retargeting.ts",
    "analytics": "ts-node src/analytics.ts",
    "broadcast-stuck": "ts-node scripts/send_stuck_users_message.ts",
    "broadcast-restored": "ts-node scripts/send_bot_restored_message.ts",
    "broadcast-waiting": "ts-node scripts/send_waiting_receipt_message.ts",
    "broadcast-reels": "ts-node broadcast_reels_camp.ts",
    "broadcast-bf": "ts-node broadcast_black_friday.ts",
    "broadcast-bf-day2": "ts-node broadcast_black_friday_day2.ts",
    "broadcast-bf-day2-send": "ts-node broadcast_black_friday_day2.ts --send",
    "broadcast-bf-day3": "ts-node broadcast_black_friday_day3.ts",
    "broadcast-bf-day3-send": "ts-node broadcast_black_friday_day3.ts --send",
    "test-bf": "ts-node test_broadcast_bf.ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "payment"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^5.0.5",
    "@types/pg": "^8.15.6",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "telegraf": "^4.15.0",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
